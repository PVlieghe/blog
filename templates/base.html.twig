<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %} 
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
			 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top custom-navbar-height">
				<div class="container-fluid">
					{% if app.user %}
						<a class="nav-link active" style="color: white" href="{{ path('app_recipe_index', {'all_recipes': true}) }}">Accueil
							<span class="visually-hidden">(current)</span>
						</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a class="nav-link active" target="_blank" style="color: white; margin-left: 5%" href="{{ path('app_admin_dashboard') }}">Admin
								<span class="visually-hidden">(current)</span>
							</a>
						{% endif %}
						
						<div class="collapse navbar-collapse" id="navbarColor01">
							<ul class="navbar-nav ms-auto">
								<li class="nav-item">
									<div class="nav-link " style="text-transform: none; font-style: italic; ">
											Bienvenue {{ app.user.username }} !</div>
								</li>

								<li class="nav-item dropdown">
          							<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="bi bi-person"></i></a>
									<div class="dropdown-menu">
										<a class="dropdown-item" href="{{ path('app_recipe_index', {'user_recipes': true}) }}">Voir vos recettes</a>
										<a class="dropdown-item" href="{{ path('app_recipe_index', {'favorite': true}) }}">Vos favoris!</a>
									<div class="dropdown-divider"></div>
										<a class="dropdown-item" href="{{ path('app_user_edit', {'id': app.user.id}) }}">Paramètres</a>
										<a class="dropdown-item" href="{{ path('app_user_edit', {'id': app.user.id}) }}">Modifier mot de passe</a>
									</div>
								</li>
								<li class="nav-item">
									<a class="nav-link active" href="{{ path('app_logout') }}"><i class="bi bi-power"></i>
										<span class="visually-hidden">(current)</span>
									</a>
								</li>
						{% endif %}
						</ul>
					</div>
				</div>
			</nav>
        {% block body %}{% endblock %}
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    </body>
   
</html>
