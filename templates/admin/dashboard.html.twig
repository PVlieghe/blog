{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="body">
    <h1>users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a class="btn btn-info btn-sm"href="{{ path('app_admin_show', {'id': user.id}) }}"><i class="bi bi-eye"></i></a>
                    {% if 'ROLE_ADMIN' not in user.roles %}
                        <button class="btn btn-success btn-sm" href="{{ path('app_admin_up', {'id': user.id}) }}"><i class="bi bi-person-check"></i></button>
                    {% else %}
                        <button class="btn btn-warning btn-sm" href="{{ path('app_admin_down', {'id': user.id}) }}"><i class="bi bi-person-dash"></i></button>
                    {% endif %}
                    <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" class="d-inline" onsubmit="return confirm('La suppression d'un utilisateur entraÃ®nera celle de ses recettes ainsi que de ses commentaires, voulez-vous continuer ?');">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
